<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/buttonLogoutCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogoutOk"
        android:layout_alignBaseline="@+id/buttonLogoutCancel"
        android:layout_alignBottom="@+id/buttonLogoutCancel"
        android:layout_toLeftOf="@+id/buttonLogoutCancel"
        android:layout_toStartOf="@+id/buttonLogoutCancel" />

</RelativeLayout>