<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_height="80dp"
        android:layout_below="@+id/modelName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:id="@+id/makerSpinner"
        android:layout_width="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:id="@+id/modelName"
        android:hint="Model" />

    <Spinner
        android:layout_height="80dp"
        android:id="@+id/colorSpinner"
        android:layout_width="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/makerSpinner"
        android:layout_toRightOf="@+id/makerSpinner"
        android:layout_toEndOf="@+id/makerSpinner" />

    <Button
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddCarsOk"
        android:layout_below="@+id/makerSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="New Maker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="6dp"
        android:id="@+id/textViewNewMaker"
        android:layout_below="@+id/makerSpinner"
        android:layout_toLeftOf="@+id/buttonAddCarsOk"
        android:layout_toStartOf="@+id/buttonAddCarsOk" />

    <TextView
        android:text="New Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/buttonAddCarsOk"
        android:layout_toEndOf="@+id/buttonAddCarsOk"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/textViewNewColor"
        android:layout_alignTop="@+id/textViewNewMaker" />

</RelativeLayout>